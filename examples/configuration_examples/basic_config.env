# Basic Wazuh MCP Server Configuration
# Copy this file to .env in the project root and customize

# === REQUIRED WAZUH CONNECTION ===
WAZUH_HOST=your-wazuh-server.com
WAZUH_USER=wazuh-mcp-api
WAZUH_PASS=your-secure-password

# === OPTIONAL WAZUH SETTINGS ===
WAZUH_PORT=55000
WAZUH_INDEXER_HOST=your-wazuh-server.com
WAZUH_INDEXER_PORT=9200

# === SSL CONFIGURATION ===
VERIFY_SSL=true
WAZUH_ALLOW_SELF_SIGNED=true

# === BASIC FEATURES ===
DEBUG=false
LOG_LEVEL=INFO

# === PERFORMANCE SETTINGS ===
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# === PHASE 5 ENHANCEMENT SYSTEM (OPTIONAL) ===
# Note: All enhancement features are disabled by default
ENABLE_PROMPT_ENHANCEMENT=false
ENABLE_CONTEXT_AGGREGATION=false
ENABLE_ADAPTIVE_RESPONSES=false
ENABLE_REALTIME_UPDATES=false