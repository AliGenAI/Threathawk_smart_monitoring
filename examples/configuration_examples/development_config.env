# Development Wazuh MCP Server Configuration
# Optimized for development and testing environments

# === REQUIRED WAZUH CONNECTION ===
WAZUH_HOST=wazuh-dev.local
WAZUH_USER=wazuh-mcp-dev
WAZUH_PASS=dev-password-123

# === DEVELOPMENT SETTINGS ===
WAZUH_PORT=55000
WAZUH_INDEXER_HOST=wazuh-dev.local
WAZUH_INDEXER_PORT=9200

# === RELAXED SSL FOR DEVELOPMENT ===
VERIFY_SSL=false  # Disable for development with self-signed certs
WAZUH_ALLOW_SELF_SIGNED=true

# === VERBOSE LOGGING ===
DEBUG=true
LOG_LEVEL=DEBUG
LOG_FORMAT=detailed
ENABLE_REQUEST_LOGGING=true
ENABLE_RESPONSE_LOGGING=true

# === DEVELOPMENT PERFORMANCE ===
REQUEST_TIMEOUT=60  # Longer timeout for debugging
MAX_RETRIES=2
RATE_LIMIT_REQUESTS=1000  # Higher limits for testing
RATE_LIMIT_WINDOW=60
CONNECTION_POOL_SIZE=5

# === DEVELOPMENT CACHING ===
CACHE_TTL=60  # Shorter cache for rapid development
MAX_CACHE_SIZE=100
CACHE_CLEANUP_INTERVAL=300

# === PHASE 5 ENHANCEMENT SYSTEM ===
# Enable for testing, but with development-friendly settings
ENABLE_PROMPT_ENHANCEMENT=true
ENABLE_CONTEXT_AGGREGATION=true
ENABLE_ADAPTIVE_RESPONSES=true
ENABLE_REALTIME_UPDATES=false  # Disable for simpler debugging

# === DEVELOPMENT CONTEXT SETTINGS ===
CONTEXT_CACHE_TTL=120
MAX_CONTEXT_SIZE=500
ENHANCEMENT_TIMEOUT=15.0  # Longer timeout for debugging
MAX_CONCURRENT_CONTEXT_REQUESTS=3

# === TESTING SETTINGS ===
MOCK_EXTERNAL_APIS=true
ENABLE_TEST_MODE=true
TEST_DATA_SOURCE=fixtures
FAST_STARTUP=true

# === DEVELOPMENT TOOLS ===
ENABLE_AUTO_RELOAD=true
ENABLE_PROFILING=true
PROFILING_OUTPUT_DIR=./profiling
ENABLE_MEMORY_MONITORING=true

# === EXTERNAL APIS (DEVELOPMENT) ===
# Use test/development API keys
VIRUSTOTAL_API_KEY=test-key-virustotal
SHODAN_API_KEY=test-key-shodan
ABUSEIPDB_API_KEY=test-key-abuseipdb
USE_API_MOCKS=true

# === DEVELOPMENT MONITORING ===
ENABLE_METRICS=true
METRICS_PORT=9091
HEALTH_CHECK_INTERVAL=30
PERFORMANCE_MONITORING=true
ENABLE_DEBUG_ENDPOINTS=true

# === DEVELOPMENT FEATURES ===
ENABLE_HOT_RELOAD=true
ENABLE_DEVELOPMENT_TOOLS=true
SKIP_VALIDATION_IN_DEV=false  # Keep validation even in dev
DEVELOPMENT_SHORTCUTS=true